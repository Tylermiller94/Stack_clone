<h1><%= @question.title %></h1>
  <h2>Question:</h2>
  <br>
  <p><%= @question.content %></p>
  <br>

  <%= link_to  "Answer This Question", new_question_answer_path(@question) %>



  <h2>Answer</h2>
<% if @question.answers.any? %>
  <ul>
    <% @question.answers.each do |answer| %>
      <li> <%= answer.response %> </li>
    <% end %>
  </ul>
<% end %>
